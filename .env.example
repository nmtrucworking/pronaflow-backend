# PronaFlow Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql+psycopg2://pronaflow:pronaflow123@localhost:5432/pronaflow

# Application Settings
APP_NAME=PronaFlow
APP_VERSION=1.0.0
DEBUG=True

# Security Settings
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Session Management
MAX_CONCURRENT_SESSIONS=5
SESSION_INACTIVITY_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_RESET_EXPIRE_MINUTES=15
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Brute-Force Protection
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@pronaflow.com

# OAuth2 Providers (Optional)
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# GeoIP (Optional)
# GEOIP_DATABASE_PATH=/path/to/GeoLite2-City.mmdb
